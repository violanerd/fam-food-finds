            <div class="dropdown inline-block relative">
              <button class="bg-white-300 border shadow-md text-gray-700 font-semibold py-2 px-4 rounded inline-flex items-center justify-start" id="btnCategories">
                <span class="dropdownwidth mr-1">Categories</span>
                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/> </svg>
              </button>
              <ul class="dropdown-menu absolute hidden text-gray-700 pt-1 w-36" id="itemCategoris">
                  {{#each categories as |category|}}
                    <li class="rounded-t bg-gray-200 py-2 px-4 block whitespace-no-wrap hover:bg-red-50 border-b"> {{category.category_name}}</li>
                  {{/each}}
              </ul>
            </div>
          </div>
          
